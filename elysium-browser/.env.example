# Elysium Browser Environment Configuration
# Copy this file to .env and configure your settings

# Development mode
NODE_ENV=development

# Vite dev server
VITE_DEV_SERVER_URL=http://localhost:5173

# AI Provider Configuration (optional)
# Uncomment and configure your preferred AI provider

# OpenAI
# VITE_OPENAI_API_KEY=your_openai_api_key_here
# VITE_OPENAI_MODEL=gpt-4

# Anthropic
# VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
# VITE_ANTHROPIC_MODEL=claude-3-opus-20240229

# Local Model (Ollama)
# VITE_LOCAL_MODEL_URL=http://localhost:11434
# VITE_LOCAL_MODEL_NAME=llama2

# Privacy & Analytics
VITE_TELEMETRY_ENABLED=false
VITE_LOCAL_ONLY_MODE=true

# Storage
VITE_ENCRYPT_STORAGE=true
